<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgColor"
    android:visibility="visible"
    tools:context=".ui.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="67dp"
                    android:padding="10dp"
                    android:src="@drawable/search_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="start"
                    android:text="@string/title"
                    android:textColor="@android:color/background_light"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/userBooks"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/user_books"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/languageChooseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:text="@string/language_choose"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/languageSpinner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/select_criteria_button_rounded"
            android:foregroundGravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:textSize="16sp" />

        <EditText
            android:id="@+id/currentPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/text_field_rounded"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/current_password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/text_field_rounded"
            android:ems="10"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/text_field_rounded"
            android:ems="10"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible"
            tools:ignore="Autofill" />

        <Button

            android:id="@+id/save_button"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/confirm_button_bg"
            android:elevation="6dp"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/save"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="16sp"
            android:translationZ="4dp" />

    </LinearLayout>

</android.widget.GridLayout>
